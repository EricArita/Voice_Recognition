#:kivy 1.11.1

<YourWidget>
    BoxLayout:
        orientation: "vertical"
        size: root.size
        Label:
            id: label1
            text: root.status
        BoxLayout:
            orientation:"horizontal"
            Button:
                id: button1
                text: "Train models"
                font_size: 12
                size: 300, 200
                size_hint: None, None
                on_release: root.train_models()
            Button:
                id: button2
                text: "Start voice record"
                font_size: 12
                size: 300, 200
                size_hint: None, None
                on_release: root.record()